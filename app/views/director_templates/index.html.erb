<h1>
  List of all directors
</h1>

<hr>
<form action="/add_director" method="post">
  <div>
  <label for="first_field">Name</label>
  <input id="first_field" type="text" name="director_name">
</div><div>
  <label for="second_field">Name</label>
  <input id="second_field" type="text" name="director_dob">
</div>



</form>
<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
