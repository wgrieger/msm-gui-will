<h1>
  List of all movies
</h1>

<hr>
<form action="/add_movie" method="post">
  <div>
  <label for="first_field">Title</label>
  <input id="first_field" type="text" name="movie_title">
</div><div>
  <label for="second_field">Year</label>
  <input id="second_field" type="year" name="movie_year">
</div><div>
  <label for="third_field">Duration</label>
  <input id="third_field" type="duration" name="movie_duration">
</div><div>
</div><div>
  <label for="fourth_field">Description</label>
  <textarea id="fourth_field" type="text" name="movie_description" rows="3"></textarea>
</div>
<div></div>
  <label for="fifth_field">Director ID</label>
  <input id="fifth_field" type="text" name="movie_director_id">
<div>
<button>Create movie</button>
</div>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
